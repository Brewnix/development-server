# Development Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Workspace Configuration
WORKSPACE_PATH={{ dev_environment_config.workspace_path }}
USER_WORKSPACE={{ dev_environment_config.user_workspace }}

# Default Service Ports
CODE_SERVER_PORT={{ dev_environment_config.default_ports.code_server }}
JUPYTER_PORT={{ dev_environment_config.default_ports.jupyter }}
GITLAB_PORT={{ dev_environment_config.default_ports.gitlab }}
PGADMIN_PORT={{ dev_environment_config.default_ports.pgadmin }}
ADMINER_PORT={{ dev_environment_config.default_ports.adminer }}

# Network Configuration
{% if network is defined %}
NETWORK_VLAN={{ network.vlan_id | default('') }}
NETWORK_RANGE={{ network.ip_range }}
MANAGEMENT_IP={{ network.management_ip | default(ansible_default_ipv4.address) }}
{% endif %}

# Database Configuration
{% if development_databases.postgresql %}
POSTGRES_ENABLED=true
{% endif %}
{% if development_databases.mysql %}
MYSQL_ENABLED=true
{% endif %}
{% if development_databases.mongodb %}
MONGODB_ENABLED=true
{% endif %}
{% if development_databases.redis %}
REDIS_ENABLED=true
{% endif %}

# Environment Settings
DEVELOPER_USER=developer
DOCKER_ENABLED=true
SSL_CERT_PATH=/opt/development/ssl

# Development Tools
PYTHON_TOOLS=virtualenv,pipenv,poetry,jupyter,black,flake8,pytest
NODEJS_TOOLS=yarn,typescript,vue-cli,angular-cli,create-react-app,eslint,prettier

# Site Configuration
SITE_NAME={{ site_name }}
DEPLOYMENT_TYPE=development-server
PROXMOX_HOST={{ ansible_fqdn }}
